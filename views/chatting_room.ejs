<!DOCTYPE html>
<html>
<head>
  <% include ./include/meta.ejs %>
  <% include ./include/common.ejs %>
  <style>
    .jsgrid-grid-header {
    background: #0a9a2a;
    }
    .jsgrid-header-row>.jsgrid-header-cell {
    color: white;
    background: #0a9a2a;
    }
    .jsgrid-cell{
      border-color: #87ca96;
    }
    
    @media (max-width:500px){.small-box h3{font-size:1.5rem} ol{padding-inline-start: 20px;font-size:13px;}}
    @media (max-width:400px){#subscription_list li{padding-bottom:20px;}}
    @media (max-width:350px){.small-box h3{font-size:1.1rem}}

    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { font: 13px Helvetica, Arial; }
    form { background: #000; padding: 3px; position: fixed; bottom: 0;width: 100%; }
    form input { border: 0; padding: 10px; width: 90%; margin-right:.5%; }
    form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
    #messages { list-style-type: none; margin: 0; padding: 0; }
    #messages li { padding: 5px 10px; }
    #messages li:nth-child(odd) { background: #eee; }
  </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">
  <% include ./include/sidebar.ejs %>
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <% include ./include/contentheader.ejs %>
 
    <!-- Main content -->
    <section class="content" style="color:white">
      <div class="container-fluid">
        <div class="row">
            <ul id="chat" style="color: white;"></ul>
            <form class="form-horizontal">
              <div class="form-group">
                <label for="msg" class="col-sm-2 control-label">Message</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="msg" name="msg" placeholder="Message">
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-10" style="text-align:center">
                    <button style="width:50%" class="row" id="chatting" type="button" class="btn-default">전송</button>
                </div>
                <br>
                <div class="col-sm-10" style="text-align:center">
                  <input type="text" class="form-control" id="userid" name="userid" placeholder="아이디입력">
                  <button style="width:50%" class="row" id="savechat_add" type="button" class="btn-default">친구추가</button>
                </div>
              </div>
            </form>
          </div>
      </div>
      <!-- /.card-body -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark"></aside>
  <!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->

<% include ./include/script.ejs %>
<script src="/dist/js/demo.js"></script>
<script src="/socket.io/socket.io.js"></script>

<script>
$(document).ready(function(){
    
   
    
      // 지정 namespace로 접속한다
      var chat = io('/chat'),
          news = io('/news');

      $("#chatting").click(()=>{
        // 서버로 자신의 정보를 전송한다.
        chat.emit("chat message", {
          name: "<%=userid%>",
          room: "<%=room%>",
          msg: $("#msg").val()
        });

        $.ajax({
          type: "POST",
          url : 'chat/savechat',
          data: {
            name: "<%=userid%>",
            room: "<%=room%>",
            msg: $("#msg").val()
        },
          success: function(r){
            if(r.status == true){
              alert("Success")
            }else{
              alert("fail")
            }
          }
        })
      });

      // 서버로부터의 메시지가 수신되면
      chat.on("chat message", function(data) {
        console.log("data",data)
        $("#chat").append($('<li>').text("<%=userid%>"+":"+data));
      });

      $("#savechat_add").click(()=>{
        $.ajax({
          type : "POST",
          url : 'chat/savechat_add',
          data: {
            userid: $("#userid").val(),
            room: "<%=room%>",
            msg: "채팅방에 들어왔습니다."
          },
            success: function(r){
              if(r.status == true){
                $("#chat").append($('<li>').text($("#userid").val()+":"+"채팅방에 들어왔습니다."));
                alert("친구가 추가되었습니다.")
              }else{
                alert("실패하였습니다.")
              }
            }
        })
      });
      reload()
});


function reload(){
  $.ajax({
        type: "POST",
        url : 'chat/loadchat',
        data : {
            room: "<%=room%>"
        },
        success: function(r){
            if(r.status == true){
                console.log(r.data)
                console.log(r.data.length)

                for(i=0;i<r.data.length;i++){
                    $("#chat").append($('<li>').text(r.data[i].user_id+":"+r.data[i].messege));
                }
            }else{
              alert("fail")
            }
          }
    })
}

</script>
</body>
</html>
    